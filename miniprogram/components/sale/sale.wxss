/* components/sale/sale.wxss */

.sale {
  
  padding: 10rpx;
  margin:7.5rpx;
  background: #fff;
  border-radius: 15rpx;
  width: 360rpx;
  height: auto;
  box-sizing: border-box;
  /* border: 1px solid #000; */
}

.sale .image {
  width: 100%;
  height: auto;
  overflow: hidden;
}

.sale .image image {
  width: 100%;
}

.sale .content .title {
  padding: 8rpx 5rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #424242;
}
.sale .content .bottom{
  display: flex;
}
.sale .content .bottom .price {
  flex: 0 0 110rpx;
  padding: 10rpx 0rpx 10rpx 15rpx;
  font-size: 34rpx;
  font-weight: 600;
  color: #54ac9e;
}
.sale .content .bottom .data{
  padding: 16rpx 0rpx 10rpx 0rpx;
  flex: 1 1 auto;
  font-size: 22rpx;
  color: #777;
}
.sale .content .bottom .data>text{
  margin-right: 15rpx;
}
