/* components/order-item/order-item.wxss */
.order-item{
  background: #fff;
  box-sizing: border-box;
  display: flex;
  height: 180rpx;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #ccc;
}
.order-item .image{
  width: 140rpx;
  height: 140rpx;
  overflow: hidden;
  flex: 0 0 140rpx;
  margin-right: 20rpx;
}
.order-item .image image{
  width: 100%;
  height: 100%;
}

.order-item .content{
  position: relative;
  flex: 1 1 auto;
}
.order-item .content .title{
  font-weight: 600;
  font-size: 28rpx;
  color: #424242;
}

.order-item .content .cat{
  font-size: 24rpx;
  color: #777;
  height: 50rpx;
  line-height: 50rpx;
}

.order-item .content .bottom{
  position: absolute;
  width: 100%;
  height: 40rpx;
  bottom: 5rpx;
  display: flex;
}

.order-item .content .bottom .subTotal{
  flex: 0 0 150rpx;
  color: #54ac9e;
}

.order-item .content .bottom .num{
  flex: 1 1 auto;
  color: #666;
  text-align: right;
  font-size: 27rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
}