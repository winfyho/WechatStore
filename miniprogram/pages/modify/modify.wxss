/* miniprogram/pages/modify/modify.wxss */
page{
  background: #eee;
  box-sizing: border-box;
}

.modify{
  width: 100%;
  height: 120rpx;
  line-height: 90rpx;
  display: flex;
  box-sizing: border-box;
  background: #fff;
  margin-bottom: 15rpx;
  padding: 15rpx 30rpx;
}
.modify>view{
  height: 100%;
  line-height: 90rpx;
}
.modify .title{
  flex: 0 0 150rpx;
  padding: 0 15rpx;
}
.modify .text{
  flex: 1 1 auto;
}
.modify .text input{
  color: #444;
  padding-left: 15rpx;
  box-sizing: border-box;
  height: 100%;
  line-height: 90rpx;
  font-size: 32rpx;
}
.modify .text input.active{
  background: #ddd;
}
.btn{
  margin: 10rpx auto;
  border-radius: 15rpx;
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  font-size: 30rpx;
  color: #777;
  text-align: center;
}
.btn-complete{
  background: rgb(11, 177, 11);
  color: #fff;
}