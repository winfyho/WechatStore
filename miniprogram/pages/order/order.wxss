/* miniprogram/pages/order/order.wxss */
page{
  background: #f2f2f2;
  padding-bottom: 100rpx;
}
.pay-method{
  display: flex;
  margin: 15rpx 0rpx;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  background: #fff
}
.pay-method .title{
  flex: 0 0 200rpx;
  text-align: center;
}
.pay-method .method{
  flex: 1 1 auto;
  text-align: right;
}
.pay-method .icon{
  flex: 0 0 100rpx;
  text-align: center;
  color: #777;
  font-size: 36rpx;
}

.pay{
  position: fixed;
  width: 100%;
  bottom: 0;
  height: 100rpx;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
  display: flex;
}
.pay .order-price{
  flex: 1 1 auto;
  color: #54ac9e;
  font-size: 40rpx;
  font-weight: 600;
  line-height: 80rpx;

}
.pay .btn-pay{
  flex: 0 0 180rpx;
  width: 220rpx;
  background: #54ac9e;
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}