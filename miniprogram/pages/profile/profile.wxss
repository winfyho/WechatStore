/* miniprogram/pages/profile/profile.wxss */
page{
  background: #eee;
  box-sizing: border-box;
}
.login{
  width: 100%;
  height: 150rpx;
  line-height: 150rpx;
}
.login .btn-login{
  background: #00B26A;
  color: #fff;
  text-align: center;
  width: 150rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-weight: 600;
  border-radius: 15rpx;
  margin: 35rpx auto;
}
.user-infor{
  width: 100%;
  height: 150rpx;
  line-height: 90rpx;
  display: flex;
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;
  margin-bottom: 15rpx;
}
.user-infor .user-icon{
  flex: 0 0 100rpx;
  background: #ddd;
  text-align: center;
  border-radius: 50%;
  margin-right: 30rpx;
}
.user-infor .username{
  flex: 1 1 auto;
}
.user-infor .icon-right{
  font-size: 40rpx;
  flex:0 0 80rpx;
  text-align: center; 
  color: #999;
}

.route{
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  margin-bottom: 15rpx;
  background: #fff;
  padding: 0 30rpx;
}
.route .title{
  flex: 1 1 auto;
}
.route .icon{
  color: #999;
  font-size: 40rpx;
  flex: 0 0 80rpx;
  text-align: center;
}